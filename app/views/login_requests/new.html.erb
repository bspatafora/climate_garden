<h1>Log in</h1>

<%= form_with url: login_requests_path do |form| %>
  <div>
    <%= form.label :phone %><br>
    <%= form.text_field :phone %>
    <% if flash[:alert].present? %>
      <div><%= flash[:alert] %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit 'Send code' %>
  </div>
<% end %>
